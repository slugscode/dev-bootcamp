
<div class="login-logo">
    <a href="../../index2.html"><b>Login</b>LTE</a>
</div>
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form action="Login" method="post" id="form_login">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="Email" id="Email" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="Password" id="Password" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" id="val_login" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>

        </form>

        <div class="social-auth-links text-center mb-3">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-primary">
                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
            </a>
            <a href="#" class="btn btn-block btn-danger">
                <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
            </a>
        </div>
        <!-- /.social-auth-links -->

        <p class="mb-1">
            <a href="forgot-password.html">I forgot my password</a>
        </p>
        <p class="mb-0">
            <a class="text-center" id="btn_register">Register a new membership</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>

<script>
    $("#btn_register").click(function () {

        $("#header-modal-default").empty()
        $("#body-modal-default").load("/Auth/Register")
        $("#modal-default").modal("show")
    })

    $("#form_login").validate({

        errorClass: "is-invalid text-danger",
        rules: {
            Email: {
                required: true,
                email: true
            },
            Password: {
                required: true,
                minlength: 2
            }
        },

        message: {
            Email: {
                required: "please enter email",
                email: "email is already taken"
            },
            Password: {
                required: "please enter password",
                minlength: 2
            }

        },

        submitHandler: function (form) {

            var email = $("#Email").val()
            var password = $("#Password").val()

            debugger

            $.ajax({
                url: "/Auth/checklogin",                
                data: { Email: email, 
                    Password: password },
                datatype: "json",

                success: function (respon) {
                    if (respon == true) {
                        toastr.success(respon.message)
                        window.location.href = "/Home/Index"

                    }
                    else {
                        $("#val_login").text(respon.message)
                    }
                }

            })
        }

    })

</script>